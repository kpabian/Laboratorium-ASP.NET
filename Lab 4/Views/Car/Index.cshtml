@using Lab_4.Models;
@model List<Car>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista samochodów</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Car" asp-action="Create">Dodaj nowy samochód</a>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].NrRejestracyjny)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model[0].CarModel) i @Html.DisplayNameFor(model => model[0].Producent)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model[0].Wlasciciel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Priority)
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.NrRejestracyjny
                    </td>
                    <td>
                        @item.CarModel @item.Producent
                    </td>
                    <td>
                        @item.Wlasciciel
                    </td>
                    <td>
                        @item.Priority.GetDisplayName()
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.ID>Edycja</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.ID>Szczegóły</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.ID>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}