@using Laboratorium_3___App.Models;﻿
@model Dictionary<int, Car>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista kontaktów</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Car" asp-action="Create">Dodaj nowy samochód</a>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Numer rejestracyjny
                </th>

                <th>
                    Model i producent
                </th>

                <th>
                    Właściciel
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Value.NrRejestracyjny
                    </td>
                    <td>
                        @item.Value.CarModel @item.Value.Producent
                    </td>
                    <td>
                        @item.Value.Wlasciciel
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Key>Edycja</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Key>Szczegóły</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Key>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}